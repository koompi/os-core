# Depends on: libxml2 

name=libxslt
version=1.1.34
release=1
source=(http://xmlsoft.org/sources/libxslt-1.1.34.tar.gz)

build() {
        cd $name-$version

        #sed -i s/3000/5000/ libxslt/transform.c doc/xltproc.{1,xml} 

	./configure --prefix=/usr --disable-static --without-python 

	make
        make DESTDIR=$PKG install

}
