# Description: Programs for compressing and decompressing files
# URL: https://koompi.org        
# Maintainer:  HangsiaHONG, hangsia@koompi.org
# Organization:  KOOMPI, koompi.com
# Depends on:  libgpg-erro

name=libgcrypt
version=1.8.7
release=1
source=(https://www.gnupg.org/ftp/gcrypt/libgcrypt/libgcrypt-1.8.7.tar.bz2)

build() {
        cd $name-$version

	./configure --prefix=/usr &&
	make                      


        make DESTDIR=$PKG install

}
