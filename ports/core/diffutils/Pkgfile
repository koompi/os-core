# Depends on:  bash

name=diffutils
version=3.7
release=1
source=(https://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

build() {
        cd $name-$version

        ./configure --prefix=/usr
        make
        make DESTDIR=$PKG install
}
