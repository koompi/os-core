# description	: modern 3G graphics API
# depends	: cairo libsigc++

name=cogl
version=1.22.8
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/cogl/1.22/cogl-1.22.8.tar.xz)

build() {
	cd $name-$version

	autoreconf &&

./configure --prefix=/usr  \
            --enable-gles1 \
            --enable-gles2 \
            --enable-{kms,wayland,xlib}-egl-platform \
            --enable-wayland-egl-server              

	make
	make DESTDIR=$PKG install
}
