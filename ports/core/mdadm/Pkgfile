# Description: administration tools for software RAID.
# URL: https://www.kernel.org/pub/linux/utils/raid/mdadm/mdadm-4.1.tar.xz
# Maintainer: 
# Organization:
# Depends on:

name=mdadm
version=4.1
release=1
source=(https://www.kernel.org/pub/linux/utils/raid/mdadm/mdadm-4.1.tar.xz)

build() {
	cd $name-$version

	sed 's@-Werror@@' -i Makefile
	make
	make DESTDIR=$PKG install
}
