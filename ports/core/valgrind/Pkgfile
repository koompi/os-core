# Description: instrumentationm framework for building dynamic analysis tools.
# URL: http://valgrind.org/downloads/valgrind-3.12.0.tar.bz2
# Maintainer: Jiren Edison
# Organization: KOOMPI
# Depends on: boost llvm gdb which bind bind-utilities openmp

name=valgrind
version=3.12.0
release=1
source=(http://valgrind.org/downloads/valgrind-3.12.0.tar.bz2)

build() {
	cd $name-$version

	sed -i 's|/doc/valgrind||' docs/Makefile.in &&

	./configure --prefix=/usr \
	            --datadir=/usr/share/doc/valgrind-3.12.0 &&
	make
	make DESTDIR=$PKG install
}
