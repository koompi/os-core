# Description: a thin layer for graphics libraries
# URL: https://github.com/ebassi/graphene/releases/download/1.10.2/graphene-1.10.2.tar.xz
# Maintainer: Edison Jiren
# Organization: KOOMPI
# Depends on: Glib, gobject-introspection

name=graphene
version=1.10.2
release=1
source=(https://github.com/ebassi/graphene/releases/download/1.10.2/graphene-1.10.2.tar.xz)

build() {
	cd $name-$version

	mkdir build &&
	cd build 

	meson --prefix=/usr .. &&
	ninja
	
	DESTDIR=$PKG ninja install
}
