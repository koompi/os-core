# description	: The SQLite package is a software library that implements a self-contained, serverless, zero-configuration, transactional SQL database engine. 
# depends	: libffi openssl sqlite

name=sqlite
version=3.24.0
release=1
source=(https://sqlite.org/2018/sqlite-autoconf-3240000.tar.gz)

build() {
	cd sqlite-autoconf-3240000

	./configure --prefix=/usr     \
            --disable-static  \
            --enable-fts5     \
            CFLAGS="-g -O2                    \
            -DSQLITE_ENABLE_FTS4=1            \
            -DSQLITE_ENABLE_COLUMN_METADATA=1 \
            -DSQLITE_ENABLE_UNLOCK_NOTIFY=1   \
            -DSQLITE_ENABLE_DBSTAT_VTAB=1     \
            -DSQLITE_SECURE_DELETE=1          \
            -DSQLITE_ENABLE_FTS3_TOKENIZER=1" &&
    make
	make DESTDIR=$PKG install

	
}
