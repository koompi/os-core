# description	: contain an open source software library used for creating fast, visually rich and animated graphical
# depends	: ATK, Cogl, JSON-GLib 

name=clutter
version=1.26.4
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/clutter/1.26/clutter-1.26.4.tar.xz)

build() {
	cd $name-$version



./configure --prefix=/usr               \
            --sysconfdir=/etc           \
            --enable-egl-backend        \
            --enable-evdev-input        \
            --enable-wayland-backend    \
            --enable-wayland-compositor 



	make
	make DESTDIR=$PKG install

}

