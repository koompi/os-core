# Description: an intefration library for using Gstreamer with Clutter.
# URL: http://ftp.gnome.org/pub/gnome/sources/clutter-gst/3.0/clutter-gst-3.0.27.tar.xz
# Maintainer: Edison Jiren 
# Organization: KOOMPI
# Depends on: Clutter, gst-plugins-base, libgudev

name=clutter-gst
version=3.0.27
release=1
source=(http://ftp.gnome.org/pub/gnome/sources/clutter-gst/3.0/clutter-gst-3.0.27.tar.xz)

build() {
	cd $name-$version

	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
