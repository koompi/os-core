# Description: or creating and maintaining centralized SGML catalogs. 
# URL: 
# Maintainer: Jiren
# Organization: KOOMPI
# Depends on:

name=sgml-common
version=0.6.3
release=1
source=(https://sourceware.org/ftp/docbook-tools/new-trials/SOURCES/sgml-common-0.6.3.tgz
	http://www.linuxfromscratch.org/patches/blfs/10.0/sgml-common-0.6.3-manpage-1.patch)


build() {
	cd $name-$version

	patch -Np1 -i ../sgml-common-0.6.3-manpage-1.patch &&
	autoreconf -f -i
	./configure --prefix=/usr --sysconfdir=/etc &&
	make
	
	make docdir=/usr/share/doc install &&

	install-catalog --add /etc/sgml/sgml-ent.cat \
	    /usr/share/sgml/sgml-iso-entities-8879.1986/catalog &&

	install-catalog --add /etc/sgml/sgml-docbook.cat \
	    /etc/sgml/sgml-ent.cat

	install-catalog --remove /etc/sgml/sgml-ent.cat \
	    /usr/share/sgml/sgml-iso-entities-8879.1986/catalog &&

	install-catalog --remove /etc/sgml/sgml-docbook.cat \
	    /etc/sgml/sgml-ent.catnstall-catalog --remove /etc/sgml/sgml-ent.cat \
	    /usr/share/sgml/sgml-iso-entities-8879.1986/catalog &&

	install-catalog --remove /etc/sgml/sgml-docbook.cat \
	    /etc/sgml/sgml-ent.cat

}

