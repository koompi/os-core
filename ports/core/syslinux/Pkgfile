name=syslinux
version=6.04-pre1
release=1
source=(https://mirrors.edge.kernel.org/pub/linux/utils/boot/syslinux/Testing/6.04/syslinux-6.04-pre1.tar.xz)

build() {
	cd $name-$version

	#patch -p1 -i $SRC/$name-$version-sysmacros.patch

	make
	make DESTDIR=$PKG install
}
