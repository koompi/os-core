name=vala
version=0.50.2
release=1
source=(https://download.gnome.org/sources/vala/0.50/vala-0.50.2.tar.xz)

build() {
        cd $name-$version

	./configure --prefix=/usr 

	make

        make DESTDIR=$PKG install
}
