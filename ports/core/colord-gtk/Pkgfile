# Description: contain GTK+ binding for Colord.
# URL: https://www.freedesktop.org/software/colord/releases/colord-gtk-0.2.0.tar.xz
# Maintainer: Edison Jiren 
# Organization: KOOMPI
# Depends on: colord, GTK+-3.24.22

name=colord-gtk
version=0.2.0
release=1
source=(https://www.freedesktop.org/software/colord/releases/colord-gtk-0.2.0.tar.xz)

build() {
	cd $name-$version

mkdir build &&
cd    build &&

meson --prefix=/usr  \
      -Dgtk2=true    \
      -Dvapi=true    \
      -Ddocs=false   \
      -Dman=false .. &&
ninja

	DESTDIR=$PKG ninja install
}
