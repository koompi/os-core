Description:  Libssh2 package is a client-side C library implementing the SSH2 protocol. 
# URL: https://koompi.org        
# Maintainer:  HangsiaHONG, hangsia@koompi.org
# Organization:  KOOMPI, koompi.com
# Depends on:  

name=libssh2
version=1.9.0 
release=1
source=(https://www.gnupg.org/ftp/gcrypt/npth/npth-1.6.tar.bz2)

build() {
        cd $name-$version

        ./configure --prefix=/usr --disable-static
        make
        make DESTDIR=$PKG install
}
