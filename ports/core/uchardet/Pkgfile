# Description: The Uchardet package contains an encoding detectory library which takes a sequence of bytes in an unknown character encoding and attempts to determine the encoding of the text. 
# URL: 
# Maintainer: 
# Organization:
# Depends on: cmake

name=uchardet
version=0.0.7
release=1
source=(https://www.freedesktop.org/software/uchardet/releases/uchardet-0.0.7.tar.xz)

build() {
	cd $name-$version
mkdir build &&
cd    build &&
     
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DBUILD_STATIC=OFF          \
      -Wno-dev ..                 &&
make
make DESTDIR=$PKG install
}

