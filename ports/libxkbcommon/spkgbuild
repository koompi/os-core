# description	: keymap compiler and support library
# homepage	: https://xkbcommon.org/
# depends	: libxcb wayland-protocols meson

name=libxkbcommon
version=0.10.0
release=1
source="https://xkbcommon.org/download/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd build

	meson --prefix=/usr \
	      -Denable-docs=false
	ninja
	DESTDIR=$PKG ninja install
}
