# description	: Curses-based user interface library
# depends	: python2

name=python2-urwid
version=2.1.0
release=1
source="https://pypi.python.org/packages/source/u/urwid/urwid-$version.tar.gz"

build() {
	cd urwid-$version
	python2 setup.py build
	python2 setup.py install --prefix=/usr --root=$PKG --optimize=1
}
