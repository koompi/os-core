# Description: The util-macros package contains the m4 macros used by all of the Xorg packages.
# URL: https://koompi.org        
# Maintainer:  HangsiaHONG, hangsia@koompi.org
# Organization:  KOOMPI, koompi.com 

name=util-macros
version=1.19.2
release=1
source=(http://ftp.x.org/pub/individual/util/util-macros-$version.tar.bz2)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make DESTDIR=$PKG install
}

