name=binutils
version=2.35
source=(http://ftp.gnu.org/gnu/binutils/binutils-$version.tar.xz)

build() {
	cd $name-$version

	mkdir -v build
	cd       build
	
	../configure  \
		--prefix=/tools \
		--host=$KFS_TGT \
		--with-sysroot=$KFS \
		--target=$KFS_TGT \
		--disable-nls \
		--disable-werror \
		--with-lib-path=/tools/lib 
	make
	mkdir -v /tools/lib && ln -sv lib /tools/lib
	make install
}
