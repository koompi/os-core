name=binutils
version=2.35
source=(http://ftp.gnu.org/gnu/binutils/binutils-$version.tar.xz)

build() {
	cd $name-$version

	mkdir -v build
	cd       build
	
	../configure  \
		--prefix=/tools \
		--with-sysroot=$KFS \
		--target=$KFS_TGT \
		--disable-nls \
		--disable-werror 
	make
	make install
}
