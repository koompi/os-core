name=binutils
version=2.35
source=(http://ftp.gnu.org/gnu/binutils/binutils-$version.tar.xz)

build() {
	cd $name-$version

	mkdir -v build
	cd       build

	CC=$KFS_TGT-gcc                \
	AR=$KFS_TGT-ar                 \
	RANLIB=$KFS_TGT-ranlib         \
	../configure                   \
		--prefix=/tools            \
		--hosts=$KFS_TGT \
		--disable-nls              \
		--enable-shared \
		--disable-werror           \
		--with-lib-path=/tools/lib \
		--enable-64-bit-bfd
	make
	make install
	cp -v ld/ld-new /tools/bin
}
